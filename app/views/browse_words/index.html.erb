<div class="selectedWord hidden">
	<div class="h3">
		<span class="wordTitle"></span>
		<div class="options">
			<a class="btn btn-sm text-muted audio"><i class="fa fa-volume-up fa-fw fa-2x"></i></a>
			<a class="btn btn-sm text-muted bookmark" data-remote="true"><i class="fa fa-star-o fa-fw fa-2x"></i></a>
			<share-button></share-button>
		</div>
	</div>
	<div class="description">
		<strong>Description: </strong><span class="wordDescription"></span>

	</div>
	<div class="audio hidden"><audio id= "audio" src=""></audio></div>
</div>
<div class="showResults margin-top-md col-md-12 col-lg-12 col-xs-12 col-sm-12 hidden">
	<div class="h3"> Choose a word to see its meaning: <span class="btn btn-sm btn-info" type="button" id="history" data-toggle="modal" data-target="#bookmarkHistory">Bookmark History</span>
		<div class="input-group col-md-4 col-lg-4 col-sm-12 col-xs-12 margin-top-md">
          <input type="text" class="form-control" placeholder="Filter by Letter.." id="letterSearch" aria-describedby="basic-addon2">
          <span class="input-group-addon" id="basic-addon2"><i class="fa fa-search"></i></span>
        </div>
    </div>
	<p class="help-block"></p>
	<div class="wordsList col-xs-12 col-md-12 col-sm-12 col-lg-12">
	</div>
</div>

<!-- Modal -->
<div class="modal fade" id="bookmarkHistory" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog modal-sm" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Bookmark History</h4>
      </div>
      <div class="modal-body">
        
      </div>
      <div class="modal-footer">
        <a type="button" class="btn btn-info" href="/browse_words/download_bookmarks"><i class="fa fa-download fa-fw"></i>Bookmarked Words</a>
        <button type="button" class="btn btn-danger deleteAll" data-dismiss="modal">Delete All</button>
      </div>
    </div>
  </div>
</div>

<div class="col-md-12 col-xs-12 col-sm-12 paddingReset text-center">
	<div class="btn-group margin-top-md text-center" data-toggle="buttons">
		<% ('A'..'Z').each do |char| %>
		     <% if char == "A" %>
		     	<label class="btn btn-info active navLinks">
		          	<input type="radio" name="letters" id="<%= char %>" autocomplete="off"> <%= char %>
		        </label>  	
		     <% else %> 
		     	<label class="btn btn-info navLinks">
		          	<input type="radio" name="letters" id="<%= char %>" autocomplete="off"> <%= char %>
		        </label>  
		     <% end %>
		<% end %>
	</div>
</div>